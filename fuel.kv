<WindowManager>:
    MainWindow:

<DataInp@MDTextField>
    mode: "rectangle"
    multiline: False

<MainWindow>

    peoples_lbl: peoples_lbl
    result: result
    km: km
    consumption: consumption
    price: price
    sett_lang: sett_lang

    BoxLayout:
        orientation:'vertical'

        MDBottomNavigation:
            panel_color: "#0288d1"
            selected_color_background: "orange"
            text_color_active: "#263238"
            text_color_normal: "darkgrey"

            MDBottomNavigationItem:
                name: 'calc'
                text: 'Расчет'
                icon: 'gas-station'

                GridLayout:
                    rows:3

                    BoxLayout:
                        size_hint: 1, 0.6
                        MDLabel:
                            id: result
                            halign: 'center'
                            text: 'Результат расчета\n '

                    BoxLayout:
                        orientation: 'vertical'
                        padding: ['20dp', '0dp', '20dp', '0dp']
                        spacing: '10sp'
                        DataInp:
                            id: km
                            hint_text: "Количество километров"
                            input_type: 'number'
                            input_filter: 'float'
                        DataInp:
                            id: consumption
                            hint_text: "Средний расход топлива л/100км"
                            input_type: 'number'
                            input_filter: 'float'
                        DataInp:
                            id: price
                            hint_text: "Цена за литр топлива"
                            input_type: 'number'
                            input_filter: 'float'
                        MDLabel:
                            halign: 'center'
                            text: 'Количество человек'
                        BoxLayout:
                            spacing: '15sp'
                            size_hint: 0.8, 1
                            pos_hint: {"center_x": .5, "center_y": .5}
                            MDIconButton:
                                pos_hint: {"center_x": .5, "center_y": .5}
                                icon: "chevron-triple-left"
                                on_press: root.up_peoples(-1)
                            MDLabel:
                                id: peoples_lbl
                                halign: 'center'
                                pos_hint: {"center_x": .5, "center_y": .5}
                                text: '1'
                            MDIconButton:
                                pos_hint: {"center_x": .5, "center_y": .5}
                                icon: "chevron-triple-right"
                                on_press: root.up_peoples(1)

                    AnchorLayout:
                        size_hint: 1, 0.4
                        anchor_x: 'center'
                        anchor_y: 'center'
                        padding: ['0dp', '10dp', '0dp', '30dp']
                        MDFillRoundFlatButton:
                            size_hint: 0.8, 0.2
                            font_size: '25sp'
                            text: "Расчет стоимости"
                            color: "#0288d1"
                            on_press: root.calculating()


            MDBottomNavigationItem:
                name: 'Journal'
                text: 'Журнал'
                icon: 'notebook-multiple'

                GridLayout:
                    rows: 1
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        MDLabel:
                            halign: 'center'
                            text: 'Я\n не\n поеду\n воевать\n на\n Украину!'

            MDBottomNavigationItem:
                name: 'settings'
                text: 'Настройки'
                icon: 'cog'

                BoxLayout:
                    padding: [30, 10, 30, 10]

                    AnchorLayout:
                        anchor_y: "top"

                        MDList:
                            TwoLineListItem:
                                id: sett_lang
                                text: 'Язык'
                                secondary_text: 'Русский'
                                on_touch_down: root.change_lang()
                            TwoLineListItem:
                                text: 'Валюта'
                                secondary_text: 'Тэнге'
                                on_touch_down: pass

