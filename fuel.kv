<Container>
    rows:3
    BoxLayout:
        size_hint: 1, 0.6
        MDLabel:
            halign: 'center'
            text: 'Результат расчета\n '


    BoxLayout:
        orientation: 'vertical'
        padding: ['20dp', '0dp', '20dp', '0dp']
        spacing: '10sp'
        MDTextField:
            hint_text: "Количество километров"
            mode: "rectangle"
        MDTextField:
            hint_text: "Средний расход топлива л/100км"
            mode: "rectangle"
        MDTextField:
            hint_text: "Цена за литр топлива"
            mode: "rectangle"
        MDLabel:
            halign: 'center'
            text: 'Количество человек'
        BoxLayout:
            spacing: '15sp'
            size_hint: 0.8, 1
            pos_hint: {"center_x": .5, "center_y": .5}
            MDIconButton:
                pos_hint: {"center_x": .5, "center_y": .5}
                icon: "chevron-triple-left"
            MDLabel:
                halign: 'center'
                pos_hint: {"center_x": .5, "center_y": .5}
                text: '1'
            MDIconButton:
                pos_hint: {"center_x": .5, "center_y": .5}
                icon: "chevron-triple-right"

    AnchorLayout:
        size_hint: 1, 0.4
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: ['0dp', '0dp', '0dp', '25dp']
        MDFillRoundFlatButton:
            size_hint: 0.8, 0.2
            font_size: '25sp'
            text: "Расчет стоимости"